<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="rootPane" stylesheets="@/CSS/home.css" xmlns="http://javafx.com/javafx/21.0.06" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.HelloController">
    <children>
        <BorderPane maxHeight="650.0" maxWidth="360.0" prefHeight="650.0" prefWidth="360.0" styleClass="main-content-pane" StackPane.alignment="CENTER">
            <top>
                <HBox alignment="CENTER_LEFT" prefHeight="60.0" spacing="5.0" styleClass="header-bar" BorderPane.alignment="CENTER">
                    <children>
                        <Button mnemonicParsing="false" text="Menu" styleClass="menu-button" />
                        <Label text="Minhas Tarefas" styleClass="app-title" HBox.hgrow="ALWAYS">
                            <font>
                                <Font name="System Bold" size="20.0" />
                            </font>
                        </Label>
                    </children>
                    <padding>
                        <Insets left="10.0" right="10.0" />
                    </padding>
                </HBox>
            </top>
            <center>
                <VBox alignment="TOP_CENTER" spacing="8.0" BorderPane.alignment="CENTER">
                    <children>
                        <VBox alignment="TOP_CENTER" spacing="8.0" VBox.vgrow="ALWAYS"> <children>
                            <Label text="Tarefas de Hoje" styleClass="section-title">
                                <font>
                                    <Font name="System Bold" size="16.0" />
                                </font>
                                <VBox.margin>
                                    <Insets top="8.0" />
                                </VBox.margin>
                            </Label>
                            <ListView prefHeight="400.0" prefWidth="340.0" styleClass="task-list" VBox.vgrow="ALWAYS" />
                            <HBox alignment="CENTER" prefHeight="40.0" spacing="5.0" styleClass="add-task-bar">
                                <children>
                                    <TextField promptText="Nova tarefa..." HBox.hgrow="ALWAYS" />
                                    <Button mnemonicParsing="false" text="Add" styleClass="add-task-button" />
                                </children>
                                <padding>
                                    <Insets left="5.0" right="5.0" />
                                </padding>
                            </HBox>
                            <ImageView fx:id="additionalImage" fitHeight="80.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true" styleClass="additional-image">
                                <VBox.margin>
                                    <Insets bottom="8.0" top="8.0" />
                                </VBox.margin>
                            </ImageView>
                        </children>
                        </VBox>

                        <ImageView fx:id="logoImagefooter" fitHeight="150" fitWidth="150" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@/images/incone.png" />
                            </image>
                            <effect>
                                <DropShadow radius="10" spread="0.15" />
                            </effect>
                            <VBox.margin> <Insets top="10.0" bottom="10.0" />
                            </VBox.margin>
                        </ImageView>
                    </children>
                    <padding>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                    </padding>
                </VBox>
            </center>
        </BorderPane>
    </children>
</StackPane>